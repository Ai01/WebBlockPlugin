{
    "name": "注意力",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/stop.png",
        "48": "images/stop.png",
        "128": "images/stop.png"
      }
    },
    "background": {
      "scripts": [
        "scripts/getCurrentWindow.js",
        "scripts/getCurrentTab.js",
        "scripts/listenBackground.js"
      ]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/injectedToPage.js"],
        "run_at": "document_start"
      }
    ],
    "content_security_policy": "script-src 'self' https://unpkg.com; object-src 'self'",
    "permissions": [
      "tabs",
      "storage",
      "chrome://favicon/",
      "alarms"
    ],
    "options_page": "options.html",
    "options_ui":
    {
      "page": "options.html"
    }
  }
  