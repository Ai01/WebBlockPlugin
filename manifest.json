{
  "name": "chrome-plugin-demo",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/stop.png",
      "48": "images/stop.png",
      "128": "images/stop.png"
    }
  },
  "background": {
    "scripts": [
      "scripts/getCurrentWindow.js",
      "scripts/getCurrentTab.js",
      "scripts/listenBackground.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/injectedToPage.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "chrome://favicon/"
  ],
  "options_page": "options.html",
  "options_ui":
  {
    "page": "options.html"
  }
}
